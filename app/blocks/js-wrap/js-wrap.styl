.rangeslider-wrap
	margin-top 40px
	margin-bottom 120px
	@media (min-width: 600px)	
		margin-bottom 80px
.rangeslider
	position relative
	height 4px
	width 100%
	background url($line_image) 0 0
	&__handle
		background url(../images/marker.png) no-repeat
		box-sizing border-box
		width 20px
		height 20px
		touch-action pan-y
		cursor pointer
		position absolute
		z-index 3
		top -20px
	&__labels
		position absolute
		width 100%
		z-index 2
		display flex
		justify-content space-between
	&__label
		max-width 200px
		color primary-color
		font 13px/13px bold-font 
		position relative
		padding-top 30px
		&::before
			position: absolute
			top: 3px
			content ''
			background url($serif_short_image) $serif_short_offset_x $serif_short_offset_y
			width $serif_short_width
			height $serif_short_height
		@media (max-width: 600px)
			writing-mode vertical-rl
			height 40px
		&:last-child
			&::before
				right 0
		&:first-child
			&::before
				left 0
		&:first-child, &:last-child
			&::before
				background url($serif_long_image) $serif_long_offset_x $serif_long_offset_y
				width $serif_long_width
				height $serif_long_height